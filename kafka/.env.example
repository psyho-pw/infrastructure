# Domain Configuration
DOMAIN=your-domain.com

# Kafka Version
KAFKA_VERSION=7.6.0

# Kafka Node Configuration
KAFKA_NODE_ID=1
KAFKA_PROCESS_ROLES=broker,controller

# Kafka Controller Configuration
KAFKA_CONTROLLER_QUORUM_VOTERS=1@kafka:9093
KAFKA_CONTROLLER_LISTENER_NAMES=CONTROLLER

# Kafka Replication Configuration
KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
KAFKA_TRANSACTION_STATE_LOG_MIN_ISR=1
KAFKA_TRANSACTION_STATE_LOG_REPLICATION_FACTOR=1
KAFKA_DEFAULT_REPLICATION_FACTOR=1

# Kafka Topic Configuration
KAFKA_AUTO_CREATE_TOPICS_ENABLE=false
KAFKA_NUM_PARTITIONS=3

# Kafka Log Configuration
KAFKA_LOG_RETENTION_HOURS=168
KAFKA_LOG_SEGMENT_BYTES=1073741824
KAFKA_LOG_RETENTION_CHECK_INTERVAL_MS=300000
KAFKA_LOG_DIRS=/var/lib/kafka/data

# Kafka Group Configuration
KAFKA_GROUP_INITIAL_REBALANCE_DELAY_MS=0

# Cluster ID (generate: docker run --rm confluentinc/cp-kafka kafka-storage random-uuid)
CLUSTER_ID=CHANGE_ME

# Kafka UI Configuration
KAFKA_UI_VERSION=latest
KAFKA_CLUSTER_NAME=local
KAFKA_UI_DYNAMIC_CONFIG_ENABLED=true

# Kafka UI Authentication (CHANGE THESE!)
KAFKA_UI_AUTH_TYPE=LOGIN_FORM
KAFKA_UI_ADMIN_USER=admin
KAFKA_UI_ADMIN_PASSWORD=CHANGE_ME

# Kafka SASL Configuration (CHANGE THESE!)
KAFKA_ADMIN_USER=admin
KAFKA_ADMIN_PASSWORD=CHANGE_ME
KAFKA_CLIENT_USER=client
KAFKA_CLIENT_PASSWORD=CHANGE_ME
